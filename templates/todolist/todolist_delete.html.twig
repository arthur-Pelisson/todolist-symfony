{% extends "base.html.twig" %}
{% block title %}
    Delete Task List
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Delete Todo List</h1>
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" action="{{ path('todolist_delete_task', {'id': id}) }}">
                            <div class="alert alert-danger" role="alert">
                                Are you sure you want to delete this todo list?
                            </div>
                            <input type="hidden" name="csrf_token" value="{{ csrf_token('delete' ~ id) }}">
                            <a href="{{ path('home') }}" class="btn btn-primary">Back to list</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}