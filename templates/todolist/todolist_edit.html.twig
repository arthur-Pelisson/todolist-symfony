        <div class="row">
            <div class="col-md-12">
                <h1>Edit Todo List</h1>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">Edit</button>
                        <a href="{{ path('home') }}" class="btn btn-primary">Back to list</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
