{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="card w-50 mx-auto mt-5 p-2 h-100" style="max-width: 550px;">
		<h1 class="mx-auto">Register</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="w-100 m-auto">
			<div class="d-flex m-auto flex-column w-75">
				<div class="col">
					{{ form_label(registrationForm.email) }}
					{{ form_widget(registrationForm.email) }}
					<div class="error-placeholder">
						{% if form_errors(registrationForm.email) %}
							{{ form_errors(registrationForm.email) }}
						{% else %}
							<div style="visibility: hidden;">&nbsp;</div>
						{% endif %}
					</div>
				</div>
				<div class="col">
					{{ form_row(registrationForm.plainPassword)}}
				</div>
				<div class="col">
					{{ form_row(registrationForm.confirmPassword) }}
				</div>
				<div class="col">
					{{ form_row(registrationForm.firstName) }}
				</div>
				<div class="col">
					{{ form_row(registrationForm.lastName) }}
				</div>
				<div class="col">
					{{ form_row(registrationForm.agreeTerms) }}
				</div>
				<button type="submit" class="btn btn-primary w-25 m-auto">Register</button>
				<div class="m-3 d-flex">
					<p>Already a account -></p>
					<a href="{{ path('app_login') }}">Connection</a>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	{% endblock %}
